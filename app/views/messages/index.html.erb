<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
    <div class="container-fluid">
        <div class="row list">
            <div class="col-md-2"><span class="label label-info"><%= message.name %></span></div>
            <div class="col-md-9"><%= message.body %></div>
        </div>
    </div>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
<div class="container-fluid">
    <div class="row input">
        <div class="col-md-1"><strong>名前:</strong></div>
        <div class="col-md-2"><%= f.text_area :name, :maxlength => "10" %></div>
        <div class="col-md-1"><strong>内容:</strong></div>
        <div class="col-md-2"><%= f.text_area :body, :maxlength => "20" %></div>
        <div class="col-md-2"><%= f.submit class: "btn btn-sm btn-primary" %></div>
    </div>
</div>
<% end %>