<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
    <div class="container-fluid">
        <div class="row list">
            <div class="col-md-2"><span class="label label-info"><%= message.name %></span></div>
            <div class="col-md-9"><%= message.body %></div>
        </div>
    </div>
    <% end %>
  </div>
</div>


<%= form_for(@message, html:{role: "form", class: "form-horizontal"}) do |f| %>
<div class="container-fluid">
    <div class="form-group">
      <div class="col-md-1"><label for="message_name" class="col-sm1 control-label">名前:</label></div>
      <div class="col-md-2"><%= f.text_field :name, :maxlength => "15" %></div>
      <div class="col-md-1"><label for="message_body" class="col-sm1 control-label">内容:</label></div>
      <div class="col-md-2"><%= f.text_area :body, :maxlength => "200" %></div>
      <div class="col-md-2"><%= f.submit class: "btn btn-sm btn-primary" %></div>
    </div>
</div>
<% end %>